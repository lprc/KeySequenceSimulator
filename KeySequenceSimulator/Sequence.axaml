<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
			 xmlns:local="clr-namespace:KeySequenceSimulator"
             x:Class="KeySequenceSimulator.Sequence">
	<StackPanel Orientation="Horizontal">
		<Button Name="btnSequenceNumber"
				Classes="sequenceNumberBtn"
				Width="40"
				Height="50">
			1
		</Button>

		<!-- Arrow -->
		<Canvas Width="40" Height="50">
			<Line StartPoint="0,25"
				EndPoint="40,25"
				StrokeThickness="2" />
			<Polygon Points="40,25 35,30 35,20" 
					 Stroke="White" 
					 StrokeThickness="1" 
					 Fill="White" />
		</Canvas>

		<local:AddButton ToolTip.Tip="Add Action">
			
		</local:AddButton>
		
	</StackPanel>
</UserControl>
