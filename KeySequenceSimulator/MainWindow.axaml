<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
		xmlns:local="clr-namespace:KeySequenceSimulator"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="KeySequenceSimulator.MainWindow"
        Title="KeySequenceSimulator">

	<Window.Styles>
		<StyleInclude Source="/Assets/CustomStyles.axaml" />
	</Window.Styles>

	<DockPanel>
		<Menu DockPanel.Dock="Top" >
			<MenuItem Header="_File">
				<MenuItem Header="_Save..."/>
				<MenuItem Header="_Open..."/>
				<Separator/>
				<MenuItem Header="_Exit"/>
			</MenuItem>
		</Menu>
	
		<Border BorderBrush="White"
				BorderThickness="0,2,0,0"
				DockPanel.Dock="Bottom">
			<Panel Name="footer"
				   Classes="footer"
				   DockPanel.Dock="Bottom">
				<TextBlock Classes="h1">Status:</TextBlock>
			</Panel>
		</Border>

		<!-- main view -->
		<ScrollViewer VerticalScrollBarVisibility="Auto">
			<DockPanel Name="mainPanel"
						VerticalAlignment="Stretch">
				<local:Group DockPanel.Dock="Top">
				</local:Group>

				<Button Name="btnAddGroup"
						Width="20"
						Height="30"
						DockPanel.Dock="Bottom"
						Click="AddGroup">+</Button>
			</DockPanel>
		</ScrollViewer>
	</DockPanel>
</Window>
